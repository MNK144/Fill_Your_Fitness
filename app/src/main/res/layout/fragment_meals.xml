<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:text="Fit Meals"
        android:textSize="36dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:src="@mipmap/logofit" />

    <TextView
        android:id="@+id/ordmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textmeal"
        android:text="Follow the link and Order Meals"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/meallink"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Open"
        android:ems="11"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ordmeal"
        />

</RelativeLayout>